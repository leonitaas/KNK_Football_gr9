<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="956.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LeagueManagementController">
    <children>
      <BorderPane layoutX="-1.0" prefHeight="600.0" prefWidth="994.0">
         <left>
            <AnchorPane prefHeight="600.0" prefWidth="224.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox fx:id="navbar" layoutX="1.0" layoutY="-1.0" prefHeight="600.0" prefWidth="250.0" style="-fx-background-color: white;">
                   <children>
                       <fx:include source="navbar_form.fxml" />
                   </children>
                  </VBox>
               </children>
            </AnchorPane>
         </left>
      </BorderPane>
        <Label layoutX="262.0" layoutY="38.0" text="League ID" />
        <TextField fx:id="txtLeagueId" layoutX="360.0" layoutY="36.0" prefWidth="200.0" />

        <Label layoutX="260.0" layoutY="84.0" text="League Name" />
        <TextField fx:id="txtLeagueName" layoutX="361.0" layoutY="80.0" prefWidth="200.0" />

        <Label layoutX="258.0" layoutY="130.0" text="League Photo" />
        <ImageView fx:id="leaguePhoto" fitHeight="100.0" fitWidth="100.0" layoutX="345.0" layoutY="114.0" />

        <Button fx:id="btnBrowseImage" layoutX="468.0" layoutY="130.0" onAction="#browseImage" text="Browse Image" />

        <Button fx:id="btnAddLeague" layoutX="266.0" layoutY="226.0" onAction="#addLeague" text="Add League" />
        <Button fx:id="btnUpdateLeague" layoutX="266.0" layoutY="272.0" onAction="#updateLeague" text="Update League" />
        <Button fx:id="btnDeleteLeague" layoutX="461.0" layoutY="225.0" onAction="#deleteLeague" text="Delete League" />
        <Button fx:id="btnClearLeague" layoutX="507.0" layoutY="271.0" onAction="#clearLeagueFields" text="Clear" />

        <TableView fx:id="tableLeagues" layoutX="583.0" layoutY="20.0" prefHeight="560.0" prefWidth="430.0">
            <columns>
                <TableColumn fx:id="colLeagueId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colLeagueName" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="colLeagueNumberOfTeams" prefWidth="130.0" text="Number of Teams" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
