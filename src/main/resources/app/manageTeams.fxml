                                                        <TableColumn fx:id="colStadium" prefWidth="138.228759765625" text="Stadium" />
                                                        <TableColumn fx:id="colLeague" prefWidth="127.77117919921875" text="League" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>
