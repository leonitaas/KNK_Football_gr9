    <children>
        <BorderPane prefHeight="700.0" style="-fx-background-color: #CED4DA;" stylesheets="@../css/design.css">
            <left>
                <VBox prefHeight="549.0" prefWidth="254.0" style="-fx-background-radius: 0 50 0 0;" BorderPane.alignment="CENTER">
